@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Роли</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Создать роль</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Id Role</th>
            <th>Role Name</th>
            <th>Users</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="3">нет ролей</td>
            </tr>
        }
        else
        {
            foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td></td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>
